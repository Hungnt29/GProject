@model GProject.WebApplication.Models.UserInfoDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <!-- Meta tag Keywords -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Smart Login Form Responsive Widget,Login form widgets, Sign up Web forms , Login signup Responsive web form,Flat Pricing table,Flat Drop downs,Registration Forms,News letter Forms,Elements" />
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js" type="text/javascript"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
    <link rel="stylesheet" href="~/css/deSignLogin.css" media="all">
    <!-- online-fonts -->
    <link href="//fonts.googleapis.com/css?family=Roboto+Slab:100,300,400,700Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900iSlabo+27px&subset=cyrillic,cyrillic-ext,greek,greek-ext,latin-ext,vietnamese" rel="stylesheet">
    <!--//online-fonts -->
</head>
<body style="background-image:url(/images/xe-may-honda-sh-mode-2020-thay-doi-de-huong-toi-tuong-lai-honda-sh-mode-125-moi-1024x502.jpg);">
    <!--header-->
    <div class="agileheader">
        <img src="/images/RIZE MOTO (1).png" style="width:150px;height:150px;" />
    </div>
    <!--//header-->
    <!--main-->
    <div class="main-w3l">
        <div class="w3layouts-main">
            <h2>Đăng nhập</h2>
            @if (ViewBag.Error != null)
            {
                <p style="visibility: hidden;" id="error">@ViewBag.Error</p>
            }
            <form action="/login/login" method="post">
                <input asp-for="Email" type="email" name="email" placeholder="email" required />
                <input asp-for="password" name="password" type="password" placeholder="password" id="eye" class="far fa-eye" required />
                <div id="eye">
                    <i class="far fa-eye"></i>
                </div>

            </form>
            <p>Chưa có tài khoản?<a href="/user/register-customer-page">Đăng kí</a></p>
        </div>
    </div>
    </div>
    <!--//footer-->

</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        var d = document.getElementById('error')
        if (d != null) {
            swal("Không thành công", "Đăng nhập không thành công,vui lòng nhập lại thông tin", "error");

        }
    });

</script>